<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/Toolbar_color"
        android:elevation="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/app_name"
            android:fontFamily="@font/regarnlights"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@color/white"
            android:paddingTop="10dp"
            android:textSize="24sp"/>
        <ImageButton
            android:id="@+id/logoutButton"
            android:backgroundTint="@color/Toolbar_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logout"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"/>
        <ImageButton
            android:id="@+id/bookmark_Btn"
            android:backgroundTint="@color/Toolbar_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bookmarks_icon"
            android:layout_gravity="end"
            android:layout_marginEnd="5dp"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/white">
        <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:src="@drawable/homeillustration"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/regarnlights"
            android:gravity="center"
            android:text="Hey! Welcome to Summarify"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="2"
        android:layout_margin="20dp"
        android:orientation="horizontal">

<!--        <Button-->
<!--            android:id="@+id/ExtractTranscript_Btn"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="50dp"-->
<!--            android:background="@drawable/button_background"-->
<!--            android:layout_margin="5dp"-->
<!--            android:layout_weight="1"-->
<!--            android:text="Link"-->
<!--            android:drawableLeft="@drawable/link_icon"-->
<!--            android:drawableTint="@color/Robin_egg_blue"-->
<!--            android:paddingLeft="30dp"-->
<!--            android:paddingRight="30dp"-->
<!--            android:textAllCaps="false"-->
<!--            android:backgroundTint="@color/white"-->
<!--            android:fontFamily="@font/regarnlights"-->
<!--            android:textSize="24sp"-->
<!--            android:layout_gravity="center"-->
<!--            android:textColor="@color/Robin_egg_blue"-->
<!--            android:elevation="10dp"/>-->
        <Button
            android:id="@+id/Summtext_Btn"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="50dp"
            android:background="@drawable/button_background"
            android:layout_margin="5dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Summarize Text"
            android:drawableLeft="@drawable/text_icon"
            android:layout_gravity="center"
            android:drawableTint="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/regarnlights"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:elevation="20dp"/>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>
